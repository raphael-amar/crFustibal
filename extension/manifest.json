{
	"name": "Rongo Rongo Extension",
	"version": "1.2",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"options_page": "options.html",
	"permissions": ["tabs", "http://*/*"],
	"browser_action": {
		"name": "Rongo Rongo Extension",
		"default_icon": "icon48.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	]
	,
	"manifest_version": 2
}