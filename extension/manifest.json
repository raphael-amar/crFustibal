{
	"name": "A browser action with no icon that makes the page red",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["webRequest", "tabs", "http://*/*"],
	"browser_action": {
		"name": "Make this page red",
		"icons": ["icon.png"]
	},
	 "content_scripts" : [{
        "matches" : [ "http://*/*"],
        "js" : ["background.js"],
         "run_at": "document_end"
    }]
	,
	"manifest_version": 2
}