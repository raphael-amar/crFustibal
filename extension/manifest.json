{
	"name": "An extension to add a home button on all pages.",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["webRequest", "tabs", "http://*/*"],
	"browser_action": {
		"name": "Rongo Rongo Extension"
	},
	 "content_scripts" : [{
        "matches" : [ "http://*/*","https://*/*"],
        "exclude_matches":["http://fustibal.bype.org/*"],
        "js" : ["background.js"],
         "run_at": "document_end"
    }]
	,
	"manifest_version": 2
}